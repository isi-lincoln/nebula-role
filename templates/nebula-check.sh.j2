#!/bin/bash
PATH=/usr/bin:/bin:/sbin:/usr/sbin

# Initialize a flag to track if at least one lighthouse is reachable
lighthouse_reachable=false
tested_lighthouses=""

# iterate lighthouses
{% for lh in nebula_lighthouses %}
  test="$(ping -q -w10 -W2 {{ lh.overlay_addr }} 2>/dev/null | grep -oP '\d{1,3}(?=%)')"
  # if lighthouse is reachable, set flag true
  if [ "$test" != "100" ]; then
    lighthouse_reachable=true
    break
  fi

  tested_lighthouses="${tested_lighthouses}{% if not loop.first %}, {% endif %}{{ lh.hostname }}"
{% endfor %}

# Only restart nebula service if ALL lighthouses are unreachable
if [ "$lighthouse_reachable" = false ]; then
  logger -s -p user.emerg '!!! Unable to reach ANY Nebula lighthouses (${tested_lighthouses}). Bouncing tunnel {{ nebula_interface_name }}... !!!'
  systemctl restart nebula.service
fi
